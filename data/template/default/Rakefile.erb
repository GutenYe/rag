desc "build a gem file"
task :release do
	`rm *.gem &>/dev/null`
	sh "gem build <%=project%>.gemspec"
	sh "gem push *.gem"
	sh "rm *.gem"
end

desc "autotest with watchr"
task :test do
	sh "watchr <%=project%>.watchr"
end

namespace :test do
	desc "testing the whole libraray"
	task :all do
		sh "rspec spec"
	end
end

desc "run yard server --reload"
task :doc do
	sh "yard server --reload"
end

def sh cmd
	puts cmd
	system cmd
end
