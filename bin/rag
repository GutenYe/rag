#!/usr/bin/env ruby
#ENV["BUNDLE_GEMFILE"] = File.join(File.dirname(__FILE__), '../Gemfile')

require_relative "../lib/rag"

# default plugin
require_relative "../lib/rag/new"
require_relative "../lib/rag/gem"
